function setNumberInput(obj) {
	alert(obj);
	alert(obj.value);
	alert(obj.ClassName);
	
	if(obj.ClassName == "plus") {
		obj.nextSibling.value = obj.nextSibling.value + 1; 
	}else if(obj.innerText == "-") {
		obj.nextSibling
		obj.previousSibling.value = obj.previousSibling.value -1;
	}
}