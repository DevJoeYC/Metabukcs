function setNumberInput(obj) {
	alert(obj.innerText);
	alert($(obj).next().val);
	alert($(obj).prev().value);

	if(obj.innerText == "+") {
		$(obj).next().val += 1; 
	}else if(obj.innerText == "-") {
		$(obj).prev().val -= 1;
	}
}