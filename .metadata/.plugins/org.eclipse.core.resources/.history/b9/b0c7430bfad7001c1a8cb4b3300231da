function setNumberInput(obj) {
	alert(obj);
	alert(obj.innerText);
	alert(obj.nextSibling);
	alert(obj.previousSibling.value);
	
	
	if(obj.innerText == "+") {
		obj.nextSibling.value += 1; 
	}else if(obj.innerText == "-") {
		obj.previousSibling.value -= 1;
	}
}