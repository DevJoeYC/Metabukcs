function setNumberInput(obj) {
	var num = 0;

	if(obj.innerText == "+") {
		var str = $(obj).next().val();
		num = parseInt(str) + 1;
		$(obj).next().val(num); 
	}else if(obj.innerText == "-") {
		var str = $(obj).prev().val();
		num = parseInt(str) + 1;
		$(obj).prev().val(num);
	}
}