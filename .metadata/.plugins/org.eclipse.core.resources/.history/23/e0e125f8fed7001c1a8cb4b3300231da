function setInputNumber(obj) {
	var num = 0;
	var str = "";
	if(obj.innerText == "+") {
		str = $(obj).next().val();
		num = parseInt(str) + 1;
		$(obj).next().val(num); 
	}else if(obj.innerText == "-") {
		str = $(obj).prev().val();
		num = parseInt(str) - 1;
		if(num )
		$(obj).prev().val(num);
	}
}